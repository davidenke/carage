:host {
  position: relative;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
          -ms-flex-direction: column;
          flex-direction: column;
  min-height: 100vh;
}

.creator {
  position: absolute;
  bottom: 0;
  left: -100vw;
  right: auto;
  top: 0;
  display: block;
  height: 100vh;
  width: 100vw;
}