button {
  -webkit-appearance: none;
     -moz-appearance: none;
          appearance: none;
  border: 0;
  border-radius: 10px;
  background: var(--color-accent);
  color: var(--color-light);
  cursor: pointer;
  outline: 0;
  margin: 0;
  padding: 5px 10px;
}
button:disabled {
  cursor: default;
  pointer-events: none;
}
:host(.expand) button {
  width: 100%;
}